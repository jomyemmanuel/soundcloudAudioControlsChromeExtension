{
  "manifest_version": 2,

  "name": "SoundCloud Controls",
  "description": "This extension allows the user to control music on soundcloud.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://soundcloud.com/*"
  ]
}
